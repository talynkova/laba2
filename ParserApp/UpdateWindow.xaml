                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Нарушение конфиденциальности" Binding="{Binding ConfidentialityViolation}" Width="150">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="FontSize" Value="20"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Нарушение целостности" Binding="{Binding IntegrityViolation}" Width="150">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="FontSize" Value="20"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Нарушение доступности" Binding="{Binding AvailabilityViolation }" Width="150">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="FontSize" Value="20"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>

        </DataGrid>
        <Button x:Name="Yes1" Content="ДА"   Margin="35,71,0,0"  Click="Yes_Click1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="236" Height="82" BorderThickness="0" FontSize="40" Grid.ColumnSpan="2"  />
        <Button x:Name="No1" Content="НЕТ"  Margin="0,71,27,0"  Click="No_Click1" HorizontalAlignment="Right" VerticalAlignment="Top" Width="236" Height="82" BorderThickness="0" FontSize="40" Grid.Column="1"  />
        <TextBox HorizontalAlignment="Left" Height="41" TextWrapping="Wrap" Text="&quot;Скачать базу данных?&quot;" VerticalAlignment="Top" Width="286" Margin="198,30,0,0" FontSize="25" Background="Bisque" BorderThickness="0" Grid.Column="1"/>
        <Label Content="Было:" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="35,153,0,0" Width="101" Height="39"/>
        <Label Content="Стало:" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="35,278,0,0" Width="101" Height="39"/>
    </Grid>
